<% include ./partials/head %>
<body>
  <div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <a class="pure-menu-heading" href="/dash">Dash</a>
    </div>
  </div>
    <div class="content" id="login">
        <div class="l-box-lrg pure-u-1"></div>
        <h2 class="content-head is-center">Sign in</h2>
        <div class="pure-g">
            <div class="l-box-lrg pure-u-1 pure-u-md-1-4"></div>
            <div class="l-box-lrg pure-u-1 pure-u-md-1-2">
                <form class="pure-form pure-form-stacked is-center" method="post">
                    <fieldset>
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>
                        <label for="email">Email</label> 
                        <input class="pure-u-1" id="email" name="email" type="text" placeholder="email">
                        <label for="password">Password</label> 
                        <input class="pure-u-1" id="password" name="password" type="password" placeholder="password">
                        <button type="submit" class="pure-button">Enter</button>
                        
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
<% include ./partials/footer %>
