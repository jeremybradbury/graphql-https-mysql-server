<% include ./partials/head %>
<body>
  <script>
    function showHide(){
      if(document.getElementById('showhide').checked){
        document.getElementById('password').setAttribute('type', 'password');
      } else {
        document.getElementById('password').setAttribute('type', 'text');
      }
    }
  </script>
  <div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <a class="pure-menu-heading" href="/dash">Dash</a>
    </div>
  </div>
    <div class="content" id="login">
        <div class="l-box-lrg pure-u-1"></div>
        <h2 class="content-head is-center">Sign in</h2>
        <div class="pure-g">
            <div class="l-box-lrg pure-u-1 pure-u-md-1-4"></div>
            <div class="l-box-lrg pure-u-1 pure-u-md-1-2">
                <form class="pure-form pure-form-stacked is-center" method="post">
                    <fieldset>
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>
                        <input class="pure-u-1" id="email" name="email" type="email" placeholder="email">
                        <input class="pure-u-1" id="password" name="password" type="text" placeholder="password">
                        <input id="showhide" onclick="showHide()" name="showhide" type="checkbox" value="hide">Hide Password</input>
                        <br>
                        <button type="submit" class="pure-button">Enter</button>
                        
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <script>(function($){ $('#email').focus(); })(jQuery);</script>
<% include ./partials/footer %>
